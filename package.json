{
  "name": "zoom.ts",
  "version": "8.0.0",
  "description": "A lightweight TypeScript library for image zooming, as seen on Medium.",
  "homepage": "https://github.com/michaelbull/zoom.ts#readme",
  "license": "ISC",
  "main": "dist/zoom.js",
  "types": "dist/types/index.d.ts",
