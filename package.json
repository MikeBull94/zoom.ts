{
  "name": "zoom.ts",
  "version": "7.5.0",
  "description": "A lightweight TypeScript library for image zooming, as seen on Medium.",
  "keywords": [
    "zoom.ts",
    "zoom.js",
    "image",
    "zoom",
    "zooming",
    "medium"
  ],
  "homepage": "https://github.com/michaelbull/zoom.ts",
  "bugs": {
    "url": "https://github.com/michaelbull/zoom.ts/issues"
  },
  "license": "ISC",
  "author": {
    "name": "Michael Bull",
    "url": "https://www.michael-bull.com"
  },
  "files": [
    "src",
    "dist",
    "style.scss"
  ],
  "main": "dist/commonjs/zoom.js",
  "types": "dist/commonjs/zoom.d.ts",
  "style": "dist/zoom.min.css",
  "sass": "style.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelbull/zoom.ts"
  },
  "scripts": {
    "clean": "rimraf dist",
    "prestart": "npm run clean",
    "start": "rollup --config --watch",
    "dist": "cross-env NODE_ENV=production rollup --config",
    "pretest": "rimraf reports",
    "test": "karma start test/karma.conf.js --singleRun",
    "test:watch": "karma start test/karma.conf.js",
    "coveralls": "cat ./reports/coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "build:amd": "tsc --outDir dist/amd --module amd",
    "build:commonjs": "tsc --outDir dist/commonjs --module commonjs",
    "build:es2015": "tsc --outDir dist/es2015 --module es2015 --target es2015",
    "build:native-modules": "tsc --outDir dist/native-modules --module es2015",
    "build:system": "tsc --outDir dist/system --module system",
    "prebuild": "npm run clean",
    "build": "npm-run-all --parallel build:* dist",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/jasmine": "2.8.6",
    "coveralls": "3.0.0",
    "cross-env": "5.1.3",
    "cssnano": "3.10.0",
    "jasmine-core": "3.1.0",
    "karma": "2.0.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.1",
    "karma-spec-reporter": "0.0.32",
    "karma-typescript": "3.0.12",
    "node-sass": "4.7.2",
    "npm-run-all": "4.1.2",
    "rimraf": "2.6.2",
    "rollup": "0.56.3",
    "rollup-plugin-livereload": "0.6.0",
    "rollup-plugin-sass": "0.6.0",
    "rollup-plugin-serve": "0.4.2",
    "rollup-plugin-typescript2": "0.11.1",
    "rollup-plugin-uglify": "3.0.0",
    "rollup-watch": "4.3.1",
    "typescript": "2.7.2",
    "uglify-es": "3.3.9"
  }
}
